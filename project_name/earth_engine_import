  'min': 40,
  'max': 480,
  'palette': ['001137', '01abab', 'e7eb05', '620500']
}

Map = geemap.Map()
Map.addLayer(ab_longwave_clipped, vis_radiation, 'Downward Longwave Radiation Clipped')
Map.add_colorbar(vis_radiation, label="Radiation")

Map.centerObject(geometry,12)
Map

