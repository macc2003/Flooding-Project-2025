  'min': -2000,
  'max': 10000,
  'palette': ['blue', 'white', 'green']
}

Map = geemap.Map()
Map.addLayer(ndvi, vis_ndvi, 'NDVI Clipped')
Map.centerObject(geometry,12)
Map

