    'region': geometry,  # Your geometry for the export region
    'scale': 250,  # Adjust scale as needed (e.g., 100 for 100m resolution)
    'maxPixels': 1e13,  # Adjust if needed for large exports
    'fileFormat': 'GeoTIFF'
